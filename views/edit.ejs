<!DOCTYPE html>
<html lang="jp">
<head>
    <meta charset="UTF-8">
    <title>編集</title>
    <link href="/css/stylesheet.css" rel="stylesheet">
</head>
<body>
    <header>
        <a href="/top" class="logo">
        <img src="/images/logo.jpg" alt="logo">
        </a>
        <h1>BLG選手名鑑</h1>
        <!-- <ul>
            <li>ようこそゲストさん</li>
            <li><a href="/signup">ログイン</a></li>
        </ul> -->
    </header>

    <main>
        <div class="container2">
            <form action="/update" method="post">
    <input type="hidden" name="id" value="<%= player.id %>">
    <table width="100%">
        <tr>
            <th>背番号</th>
            <th><input type="text" name="jersey_number" value="<%= player.jersey_number %>"></th>
        </tr>
        <tr>
            <th>氏名</th>
            <th><input type="text" name="name" value="<%= player.name %>"></th>
        </tr>
        <tr>
            <th>身長(cm)</th>
            <th><input type="text" name="height_cm" value="<%= player.height_cm %>"></th>
        </tr>
        <tr>
            <th>体重(kg)</th>
            <th><input type="text" name="weight_kg" value="<%= player.weight_kg %>"></th>
        </tr>
        <tr>
            <th>ポジション</th>
            <th><input type="text" name="position" value="<%= player.position %>"></th>
        </tr>
        <tr>
            <th>生年月日</th>
            <th>
                <% let birth = ""; if (player.birthdate instanceof Date) { birth = player.birthdate.toISOString().slice(0,10); } %>
                <input type="text" name="birthdate" value="<%= birth %>">
            </th>
        </tr>
        <tr>
            <th>出身地</th>
            <th><input type="text" name="birthplace" value="<%= player.birthplace %>"></th>
        </tr>
    </table>
    <div class="edit">
        <table width="100%">
            <tr>
                <th><input type="submit" value="編集"></th>
            </tr>
        </table>
    </div>
</form>
            <form action="/delete" method="post">
                <div class="edit">
                    <table width="100%">
                        <tr>
                            <input type="hidden" name="id" value="<%= player.id %>">
                            <input type="hidden" name="team_id" value="<%= player.team_id %>">
                            <th><input type="submit" value="登録抹消"></th>
                            <th>
                                <form action="/update" method="post">

                                </form>
                            </th>
                        </tr>
                    </table>    
                </div>
            </form>
        </div>
    </main>
    
</body>
</html>